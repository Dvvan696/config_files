# Git Stuff
alias githistory="git log --oneline --graph --decorate --all"
alias kraken='open -na "GitKraken" --args -p $(pwd)'

function gitupload() {
	if [ -n "$1" ]; then
		git add .
		git commit -m "$1"
		git push
	else
		echo "Provide a commit message"
	fi
}

# PDF stuff
function ocrall() {
    for i in ./*.pdf; do
        echo "Rescannig $i"
        ocrmypdf --force-ocr $i $i
    done
}


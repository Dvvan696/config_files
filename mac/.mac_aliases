# Mac Stuff
function update() {
    echo -e "\n----------- Updating homebrew -------------------\n"
    brew update && brew upgrade && brew upgrade --cask
    echo -e "\n----------- Updating cartes ---------------------\n"
    cargo install-update -a
    echo -e "\n----------- Updating node packages --------------\n"
    npm update -g
	echo -e "\n----------- Updating python packages-------------\n"
	pip3 list --outdated --format=freeze | grep -v '^\-e' | cut -d = -f 1  | xargs -n1 pip3 install -U --user || echo "Done\!"
    echo -e "\n----------- Updating other stuff------------\n"
    rustup update
    nvm install --lts
    nvm install node
    pip3 install --upgrade pip
}

alias myip='ifconfig | grep "inet " | grep -v 127.0.0.1 | cut -d\  -f2'

function zsh_colors() {
    for i in {0..255}; do
    print -Pn "%K{$i}  %k%F{$i}${(l:7::0:)i}%f " ${${(M)$((i%6)):#3}:+$'\n'};
    done
}

function cf() {
    cd ~/Documents/Github/config_files
